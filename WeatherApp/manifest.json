{
  "manifest_version": 3,
  "name": "Bergen Weather Toolbar",
  "version": "1.0",
  "permissions": ["alarms"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Bergen Weather",
    "default_icon": "icons/01d.png",
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://api.met.no/*"
  ]
}